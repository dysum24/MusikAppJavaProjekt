<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #121212;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javaprojektmusikapp.controller.testController">

    <!-- Top: Search Bar -->
    <top>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #1a1a1a; -fx-padding: 15;">
            <TextField fx:id="searchField" prefWidth="400" promptText="Search for songs..."
                       style="-fx-background-color: #282828; -fx-text-fill: white; -fx-prompt-text-fill: #888888; -fx-padding: 10;"/>
            <Button onAction="#onSearch" text="Search"
                    style="-fx-background-color: #1DB954; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        </HBox>
    </top>

    <!-- Left: Favorites Sidebar -->
    <left>
        <VBox prefWidth="250" spacing="10.0" style="-fx-background-color: #000000; -fx-padding: 15;">
            <Label text="♥ Your Favorites" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <ListView fx:id="favoritesList" prefHeight="600"
                      style="-fx-background-color: #121212; -fx-control-inner-background: #121212;"/>
            <Button fx:id="removeFavoriteBtn" onAction="#onRemoveFavorite" text="Remove Selected"
                    style="-fx-background-color: #b3b3b3; -fx-text-fill: black; -fx-padding: 8 15;"/>
        </VBox>
    </left>

    <!-- Center: Search Results -->
    <center>
        <VBox spacing="10.0" style="-fx-padding: 20;">
            <Label text="Search Results" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <ListView fx:id="resultsList" prefHeight="550"
                      style="-fx-background-color: #181818; -fx-control-inner-background: #181818;"/>
            <HBox spacing="10.0">
                <Button fx:id="addFavoriteBtn" onAction="#onAddToFavorites" text="♥ Add to Favorites"
                        style="-fx-background-color: #1DB954; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>