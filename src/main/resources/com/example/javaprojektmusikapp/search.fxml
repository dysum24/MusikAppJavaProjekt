<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javaprojektmusikapp.controller.SearchController">

    <VBox spacing="16"
          layoutX="32"
          layoutY="32"
          prefWidth="640">

        <!-- Überschrift -->
        <Label text="Search"
               styleClass="player-title"/>

        <!-- Suchfeld -->
        <TextField fx:id="searchField"
                   promptText="Suche nach Songs, Künstlern oder Alben"
                   styleClass="search-field"/>


        <!-- Button -->
        <Button text="Suchen"
                onAction="#onSearch"
                styleClass="search-btn"/>

        <!-- Ergebnisse -->
        <ListView fx:id="resultsList"
                  visible="false"
                  managed="false"
                  focusTraversable="false"/>

    </VBox>

</AnchorPane>


